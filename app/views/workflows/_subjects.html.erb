<div class="row">
<div class="col-md-12">
  <%= form_for :search, url: search_workflow_subjects_path(@workflow) do |form| %>
    <div class="form-row">
      <h3>Find Subject</h3>
      <br/>
      <div class="form-group col-md-8" style="padding-left: 0;">
        <%= form.text_field :id, class: 'form-control', placeholder: 'Subject id' %>
      </div>
      <div class="form-group col-md-4">
        <%= form.submit 'Search', class: 'btn btn-primary pull-left' %>
      </div>
    </div>
    <br />
    <dl class="dl-horizontal">
      <dt>Last Five Extracted:</td>
      <dd><%= @workflow.last_n_subjects(5, @workflow.extracts).map{ |id| link_to(id, workflow_subject_path(@workflow, id)) }.join(', ').html_safe %></dd>
      <dt>Last Five Reduced:</td>
      <dd><%= @workflow.last_n_subjects(5, @workflow.subject_reductions).map{ |id| link_to(id, workflow_subject_path(@workflow, id)) }.join(', ').html_safe %></dd>
      <dt>Random Five:</td>
      <dd><%= @workflow.random_n_subjects(5).map{ |id| link_to(id, workflow_subject_path(@workflow, id)) }.join(', ').html_safe %></dd>
    </dl>
  <% end  %>
</div>
</div>