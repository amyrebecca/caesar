<div class="row">
<div class="col-md-12">
<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Requested at</th>
      <th>Type</th>
      <th>Status</th>
      <th>Download</th>
    </tr>
  </thead>
  <tbody>
    <% @workflow.data_requests.each do |data_request| %>
      <tr class="data-request-<%= data_request.status %>">
        <td><%= data_request.created_at %></td>
        <td><%= data_request.requested_data.capitalize %></td>
        <td><%= data_request.status.capitalize %> (<%= data_request.records_exported || "0" %> / <%= data_request.records_count || "N" %>)</td>
        <td><%= link_to "Download", data_request.url %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group pull-right">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <i class="glyphicon glyphicon-plus"></i> Create <span class="caret"></span>
  </button>

  <ul class="dropdown-menu">
    <li><%= link_to "Request Extracts Export", new_workflow_reducer_path(@workflow, type: 'consensus') %></li>
    <li><%= link_to "Request Reductions Export", new_workflow_reducer_path(@workflow, type: 'count') %></li>
  </ul>
</div>
</div>
</div>